@using _2010100009_Web.Models
@model _2010100009_Web.Models.StudentDepartmentViewModel

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>View</h1>

<h4>Student</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Student.Name" class="control-label"></label>
                <input asp-for="Student.Name" class="form-control" />
                <span asp-validation-for="Student.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.DropDownListFor(m => m.Department, Model.Departments.Select(city => new SelectListItem()
           {
               Text = city.Name,
               Value = city.Name
           }))
            </div>

            <input type="hidden" asp-for="Student.Id" />
            <input type="hidden" asp-for="Student.ImageUrl" />
            <div class="form-group">
                @{ string aa = Model.Student.ImageUrl;
                    <img src="~/uploads/@aa" class="img-fluid" alt="user-image" width="200" height="auto" />
                }
            </div>
            <div class="form-group">
                <label asp-for="Student.StuID" class="control-label"></label>
                <input asp-for="Student.StuID" class="form-control" />
                <span asp-validation-for="Student.StuID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Upload Photo </label>
                <input type="file" id="FileUrl" name="photoFile" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Student.Description" class="control-label"></label>
                <input asp-for="Student.Description" class="form-control" />
                <span asp-validation-for="Student.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        var editor = new Jodit('#Student_Description');
    </script>
}


